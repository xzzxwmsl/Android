<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"


>







    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订单号："
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/order_item_no"
                android:text="201907032009"

        />


    </LinearLayout>

    <com.example.asus.shopping.clistview
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order_item_c_list"
    >

    </com.example.asus.shopping.clistview>



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="共"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_toLeftOf="@id/order_item_totalnum"
                android:gravity="center"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/order_item_totalnum"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_toLeftOf="@id/order_item_tv_001"
                android:gravity="center"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/order_item_tv_001"
            android:text="件商品  总计：¥"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toLeftOf="@id/order_item_totalprice"
            android:gravity="center"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/order_item_totalprice"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="15dp"
        />




    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/order_item_status"
                android:text="已支付"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="30dp"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_item_btn"
                android:text="去支付"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@color/green_normal"
        />
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="10dp"/>

    </LinearLayout>








