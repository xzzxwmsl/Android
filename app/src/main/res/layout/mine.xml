<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@color/white"

>
    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#4A90E2">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的信息"
                android:textSize="20sp"
        />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"


    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/whitesmoke"

    >
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mine_person_image"
                android:layout_gravity="center"
                android:src="@mipmap/wyz"
                app:civ_border_width="1dp"
                app:civ_border_overlay="true"
                app:civ_border_color="#1000"
                app:civ_fill_color="#1000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"

        ></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/mine_person_name"

                android:text="XZZ"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
        />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"


    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal"


    >
        <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"

                android:background="@mipmap/order_all"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/mine_order"
                android:text="我的订单"
                android:layout_gravity="center_vertical"

                android:textSize="30sp"
        />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"


    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal"


    >
        <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"

                android:background="@mipmap/heart"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/mine_love"
                android:text="我的收藏"
                android:layout_gravity="center_vertical"

                android:textSize="30sp"
        />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white"
    />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"


    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal"


    >
        <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"

                android:background="@mipmap/addressicon"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/mine_address"
                android:text="我的地址"
                android:layout_gravity="center_vertical"

                android:textSize="30sp"
        />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:padding="5dp"
                  android:layout_margin="5dp"
                  app:cardCornerRadius="16dp"
                  app:cardElevation="16dp"


    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mine_btn_login"
                android:background="@color/colorAccent"
                android:text="退出登录"
                android:textSize="60px"
                android:textColor="@color/white"

        />

    </androidx.cardview.widget.CardView>




</LinearLayout>