<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    

        <TextView 
                android:id="@+id/top_tv_01"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="TOP"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@color/top_bg"
                android:visibility="gone"
                
        />
        



    <LinearLayout
            android:id="@+id/tab_menu_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">
        
        <TextView
                android:id="@+id/tab_menu_firstpage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_color"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_home"
                android:gravity="center"
                android:padding="5dp"
                 />
        <TextView
                android:id="@+id/tab_menu_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_color"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_news"
                android:gravity="center"
                android:padding="5dp"
                 />

        <TextView
                android:id="@+id/tab_menu_friend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/tab_menu_color"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_home"
                android:gravity="center"
                android:padding="5dp"
                 />

        <TextView
                android:id="@+id/tab_menu_shopcar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_color"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_shopcar"
                android:gravity="center"
                android:padding="5dp"
                />

        <TextView
                android:id="@+id/tab_menu_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_color"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_mine"
                android:gravity="center"
                android:padding="5dp"
                 />





    </LinearLayout>

    <View
            android:id="@+id/div_tab_menu_bar"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white"
            android:layout_above="@id/tab_menu_bar"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top"
            android:layout_above="@id/div_tab_menu_bar"
            android:id="@+id/ly_content">

    </FrameLayout>

    

</RelativeLayout>