<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"

>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="5.5"
            android:orientation="vertical"

    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"

        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/additem_name"
                    android:text="小明"
                    android:textSize="25sp"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/additem_phone"
                    android:layout_marginTop="7dp"
                    android:text="130130130130"
                    android:layout_toRightOf="@id/additem_name"
                    android:layout_marginLeft="8dp"
            />
        </RelativeLayout>

        <TextView
                android:id="@+id/additem_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="china"
        />

    </LinearLayout>

    <View android:layout_width="2dp" android:layout_height="30dp"
          android:background="@color/account_input_color"
          android:layout_gravity="center"
    />


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
    >

        <TextView android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/additem_delete"
                  android:text="删除"
                  android:gravity="center"
                  android:focusable="false"
        />
    </LinearLayout>

</LinearLayout>
