<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="2dp"
              android:orientation="vertical"
>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/fp_list_item_img"

    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fp_list_item_name"
            android:text="啊啊啊啊啊啊啊啊啊啊啊"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="5dp"

    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fp_list_item_tv1"
                android:text="¥"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fp_list_item_price"
                android:text="110"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_toRightOf="@id/fp_list_item_tv1"
                android:layout_marginLeft="5dp"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人已付款"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/fp_list_item_tv2"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fp_list_item_num"
                android:layout_toLeftOf="@id/fp_list_item_tv2"
                android:text="2563"
                android:textSize="10sp"

        />

    </RelativeLayout>

</LinearLayout>
