<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#d3d3d3"



    >
        <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/perinfo_return"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:background="@mipmap/leftwhite"


        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="个人信息"
                android:textSize="30sp"

                android:textColor="#000"
                android:layout_centerInParent="true"
                android:gravity="center"


        />

        <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/perinfo_save"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="保存"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
        />

    </RelativeLayout>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="match_parent"

                                       android:padding="5dp"
                                       android:layout_margin="5dp"
                                       app:cardCornerRadius="16dp"
                                       app:cardElevation="16dp"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"





    >
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/perinfo_img"
                android:layout_gravity="center"
                android:src="@mipmap/wyz"
                app:civ_border_width="1dp"
                app:civ_border_overlay="true"
                app:civ_border_color="#1000"
                app:civ_fill_color="#1000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"

        ></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="上传头像"
                android:id="@+id/perinfo_img_edit"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/perinfo_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
        />

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="3dp"
    android:background="#d3d3d3"></View>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
    >

            <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="用户名"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:id="@+id/perinfo_tv_name"
            />




        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="gaoyi"
                android:layout_toRightOf="@id/perinfo_tv_name"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:id="@+id/perinfo_name"

        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
    >

        <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="电话号码"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:id="@+id/perinfo_tv_phone"
        />




        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="123456789"
                android:layout_toRightOf="@id/perinfo_tv_phone"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:id="@+id/perinfo_phone"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="修改"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:id="@+id/perinfo_phone_edit"
        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
    >

        <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:id="@+id/perinfo_tv_sex"
        />




        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="男"
                android:layout_toRightOf="@id/perinfo_tv_sex"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:id="@+id/perinfo_sex"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="修改"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:id="@+id/perinfo_sex_edit"
        />
    </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>
