<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:orientation="horizontal"
            android:background="#c9c9c9"


    >
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/leftwhite"
                android:layout_weight="1"
                android:id="@+id/orderlist_return"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
        />
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="我的订单"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"


        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"


        />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#ADADAD"
    />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
    >
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/orderlist_tv_1"

                android:background="#FFF"
                android:drawablePadding="3dp"

                android:gravity="center"
                android:padding="5dp"
                android:text="全部"
                android:textColor="@drawable/orderlist_toptxt"
                android:textSize="16sp"
        />

        <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@color/account_input_color"
               android:layout_gravity="center"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/orderlist_tv_2"

                android:background="#FFF"
                android:drawablePadding="3dp"

                android:gravity="center"
                android:padding="5dp"
                android:text="待付款"
                android:textColor="@drawable/orderlist_toptxt"
                android:textSize="16sp"
        />
        <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@color/account_input_color"
                android:layout_gravity="center"
        />



        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/orderlist_tv_3"

                android:background="#FFF"
                android:drawablePadding="3dp"

                android:gravity="center"
                android:padding="5dp"
                android:text="待收货"
                android:textColor="@drawable/orderlist_toptxt"
                android:textSize="16sp"
        />

        <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@color/account_input_color"
                android:layout_gravity="center"
        />



        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/orderlist_tv_4"

                android:background="#FFF"
                android:drawablePadding="3dp"

                android:gravity="center"
                android:padding="5dp"
                android:text="待评价"
                android:textColor="@drawable/orderlist_toptxt"
                android:textSize="16sp"
        />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white"
    />

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderlist"
    ></ListView>

</LinearLayout>
